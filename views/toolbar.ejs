<div class="card-header d-flex align-items-center">
  <div class="row">
    <div class="col-8">
      <div class="form-group">
        <div class="input-group">
          <input id="search_input" type="text" class="form-control ">
          <div class="input-group-append">
            <button id="search_btn" type="button" class="btn btn-primary ">搜索</button>
            <script>
              search_btn.onclick=function(){
                var search_input=document.getElementById('search_input');
                location.href = '/admin/product?dataName=<%=dataName%>&q='+search_input.value+'&start=<%=start%>&count=<%=count%>&rule=<%=rule%>';
              }
            </script>
          </div>
        </div>
      </div> 
    </div>
    <div class="col-2"><a  class="btn btn-info" href="/admin/product/add?dataName=<%=dataName%>" role="button">添加</a></div>
    <div class="col-2">
      <div class="dropdown show">
        <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          排序
        </a>
      
        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
          <a class="dropdown-item" href="/admin/product?dataName=<%=dataName%>&rule=_id&start=<%=start%>&count=<%=count%>&q=<%=q%>">id</a>
          <a class="dropdown-item" href="/admin/product?dataName=<%=dataName%>&rule=time&start=<%=start%>&count=<%=count%>&q=<%=q%>">发布时间</a>
        </div>
      </div>
    </div>
  </div>
</div>