<div class="row">
    <div class="col-8">
      <div class="form-group">
        <div class="input-group">
          <input id="search_input" type="text" class="form-control ">
          <div class="input-group-append">
            <button id="search_btn" type="button" class="btn btn-primary ">搜索</button>
            <button id="search_all_btn" type="button" class="btn btn-success ">显示全部</button>
            <script>
              search_btn.onclick=function(){
                var search_input=document.getElementById('search_input');
                location.href = '/admin/<%= api_name %>?dataName=<%=dataName%>&q='+search_input.value+'&start=1&count=<%=count%>&rule=<%=rule%>';
              }
              search_all_btn.onclick=function(){
                location.href = '/admin/<%= api_name %>?dataName=<%=dataName%>&q=&start=1&count=<%=count%>&rule=<%=rule%>';
              }
            </script>
          </div>
        </div>
      </div> 
    </div>
    <div class="col-2"><a  class="btn btn-info" href="/admin/<%= api_name %>/add?dataName=<%=dataName%>" role="button">添加</a></div>
    <div class="col-2">
      <div class="dropdown show">
        <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          排序
        </a>
      
        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
          <% if(api_name=='product'){ %>
            <a class="dropdown-item" href="/admin/<%= api_name %>?dataName=<%=dataName%>&rule=title&start=<%=start%>&count=<%=count%>&q=<%=q%>">标题</a>
            <a class="dropdown-item" href="/admin/<%= api_name %>?dataName=<%=dataName%>&rule=detail.time&start=<%=start%>&count=<%=count%>&q=<%=q%>">发布时间</a>
          <% } %>
          <% if(api_name=='user'){ %>
            <a class="dropdown-item" href="/admin/<%= api_name %>?dataName=<%=dataName%>&rule=username&start=<%=start%>&count=<%=count%>&q=<%=q%>">用户名</a>
            <a class="dropdown-item" href="/admin/<%= api_name %>?dataName=<%=dataName%>&rule=time&start=<%=start%>&count=<%=count%>&q=<%=q%>">注册时间</a>
          <% } %>
        </div>
      </div>
    </div>
  </div>