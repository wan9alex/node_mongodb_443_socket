<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Bootstrap Material Admin by Bootstrapious.com</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="robots" content="all,follow">
    <!-- Bootstrap CSS-->
    <link rel="stylesheet" href="/admin/vendor/bootstrap/css/bootstrap.min.css">
    <!-- Font Awesome CSS-->
    <link rel="stylesheet" href="/admin/vendor/font-awesome/css/font-awesome.min.css">
    <!-- Fontastic Custom icon font-->
    <link rel="stylesheet" href="/admin/css/fontastic.css">
    <!-- Google fonts - Poppins -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:300,400,700">
    <!-- theme stylesheet-->
    <link rel="stylesheet" href="/admin/css/style.default.css" id="theme-stylesheet">
    <!-- Custom stylesheet - for your changes-->
    <link rel="stylesheet" href="/admin/css/custom.css">
    <!-- Favicon-->
    <link rel="shortcut icon" href="/admin/img/favicon.ico">
    <!-- Tweaks for older IEs--><!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->
  </head>
  <body>
    <div class="page">
      <!-- Main Navbar-->
      <% include ./header.ejs %>
      <div class="page-content d-flex align-items-stretch"> 
        <!-- Side Navbar -->
        <% include ./slider.ejs %>
        <div class="content-inner">
          <!-- Page Header-->
          <!-- Breadcrumb-->
          <% include ./crumb.ejs %>
          <section class="tables">   
            <div class="container-fluid">
              <div class="row">
                <div class="col-lg-12">
                  <div class="card">
                    <div class="card-header d-flex align-items-center">
                      <div class="row">
                        <div class="col-8">
                          <div class="form-group">
                            <div class="input-group">
                              <input id="search_input" type="text" class="form-control ">
                              <div class="input-group-append">
                                <button id="search_btn" type="button" class="btn btn-primary ">搜索</button>
                                <script>
                                  search_btn.onclick=function(){
                                    var search_input=document.getElementById('search_input');
                                    location.href = '/admin/product?dataName=<%=dataName%>&q='+search_input.value+'&start=<%=start%>&count=<%=count%>&rule=<%=rule%>';
                                  }
                                </script>
                              </div>
                            </div>
                          </div> 
                        </div>
                        <div class="col-2"><a  class="btn btn-info" href="/admin/product/add?dataName=<%=dataName%>" role="button">添加</a></div>
                        <div class="col-2">
                          <div class="dropdown show">
                            <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                              排序
                            </a>
                          
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                              <a class="dropdown-item" href="/admin/product?dataName=<%=dataName%>&rule=_id&start=<%=start%>&count=<%=count%>&q=<%=q%>">id</a>
                              <a class="dropdown-item" href="/admin/product?dataName=<%=dataName%>&rule=time&start=<%=start%>&count=<%=count%>&q=<%=q%>">发布时间</a>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="card-body">
                      <div class="table-responsive">
                        <table class="table">
                          <thead>
                            <tr>
                              <th>#</th>
                              <th>标题</th>
                              <th>操作</th>
                            </tr>
                          </thead>
                          <tbody>
                            <% for(var i=0;i<page_data.length;i++){ %>
                            <tr>
                              <th scope="row"><%= page_data[i]._id %></th>
                              <td> <%= page_data[i].title %></td>
                              <td>
                                <a name="" id="" class="btn btn-danger small" href="<%= '/admin/product/del?dataName='+ dataName + '&_id='+page_data[i]._id %>" role="button">删除</a>
                                <a name="" id="" class="btn btn-dark small" href="<%= '/admin/product/check?dataName='+ dataName + '&_id='+page_data[i]._id %>" role="button">修改</a>
                              </td>
                            </tr>
                            <% } %>

                            <% if (page_data.length==0) {%>
                            <tr>
                              <td colspan="3"><span class="badge badge-dark">无数据</span></td>
                            </tr>
                            <% }%>
                          </tbody>
                        </table>
                      </div>
                    </div>
                    <% if(page_data.length!=0){ %>
                    <div class="card-footer">
                      <nav aria-label="...">
                          <ul class="pagination small">
                            
                            <li class="page-item <%= start==1 ? 'disabled' : '' %>">
                              <a class="page-link" href="/admin/product?dataName=<%=dataName%>&start=<%=start%>&count=<%=count%>&q=<%%>&rule=_id">上一页</a>
                            </li>
                            
                            <% for(var i=1; i<=page_count; i++){ %>
                            <li class="page-item <%= start==i ? 'active' : '' %>">
                              <a class="page-link" href="<%= '/admin/product?dataName=' + dataName + '&start=' + i + '&q=' + q + '&rule=' + rule %>"><%= i %></a>
                            </li>
                            <% } %>

                            <li class="page-item <%= start==page_count ? 'disabled' : '' %>"">
                              <a class="page-link" href="<%= '/admin/product?dataName=' + dataName + '&start=' + (start+1) + '&q=' + q + '&rule=' + rule %>">下一页</a>
                            </li>
                            
                          </ul>
                        </nav>
                    </div>
                    <% } %>
                  </div>
                </div>
              </div>
            </div>
          </section>
          <!-- Page Footer-->
          <% include ./footer.ejs %>
        </div>
      </div>
    </div>
    <!-- JavaScript files-->
    <script src="/admin/vendor/jquery/jquery.min.js"></script>
    <script src="/admin/vendor/popper.js/umd/popper.min.js"> </script>
    <script src="/admin/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="/admin/vendor/jquery.cookie/jquery.cookie.js"> </script>
    <script src="/admin/vendor/chart.js/Chart.min.js"></script>
    <script src="/admin/vendor/jquery-validation/jquery.validate.min.js"></script>
    <!-- Main File-->
    <script src="/admin/js/front.js"></script>
  </body>
</html>